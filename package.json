{
  "name": "vicode",
  "displayName": "Vicode",
  "description": "Collaborative editing between VSCode and Vim",
  "version": "0.0.11",
  "publisher": "fecet",
  "repository": {
    "type": "git",
    "url": "https://github.com/fecet/vicode"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vicode.connect",
        "title": "Connect to Vicode"
      },
      {
        "command": "vicode.disconnect",
        "title": "Disconnect from Vicode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "compile": "pnpm run bundle",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "bundle": "node build.mjs",
    "package": "pnpm run bundle && vsce package --no-dependencies -o vicode.vsix",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint -c eslint.config.mjs",
    "lint:fix": "eslint -c eslint.config.mjs --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vscode-test",
    "buf:generate": "buf generate"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "^2.2.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.23.1",
    "esbuild-plugin-import-map": "^2.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.5",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-fastify": "^2.0.2",
    "@connectrpc/connect-node": "^2.0.2",
    "@connectrpc/connect-web": "^2.0.2",
    "debounce": "^2.2.0",
    "fastify": "^5.3.2",
    "ws": "^8.18.0"
  }
}
